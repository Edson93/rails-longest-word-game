<h1>New game</h1>
<ul id="letterstyle">
  <% @letters.each do |letter| %>
    <li><%= letter.capitalize %></li>
  <% end %>
</ul>
<form action="/score" method="post">
  <p>What is the longest word you can find?</p>
  <input type="text" name="score" placeholder="Type the word">
  <input type="submit">
</form>
